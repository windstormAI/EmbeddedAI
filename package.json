{
  "name": "embedded-platform",
  "version": "1.0.0",
  "description": "AI-Embedded Systems Design Platform - A comprehensive web-based platform for designing, coding, simulating, and flashing embedded systems projects",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm start",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:models": "jest --testPathPattern=models",
    "test:hardware": "jest hardwareService.test.js",
    "test:simulation": "jest simulationService.test.js",
    "test:ai": "jest advancedAI.test.js",
    "test:services": "jest services/",
    "test:all": "jest",
    "lint": "eslint server/ client/src/ --ext .js,.jsx",
    "lint:fix": "eslint server/ client/src/ --ext .js,.jsx --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:seed": "node server/scripts/seed.js",
    "db:migrate": "node server/scripts/migrate.js",
    "db:indexes": "node server/scripts/createIndexes.js",
    "precommit": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/embedded-platform.git"
  },
  "keywords": [
    "embedded-systems",
    "circuit-design",
    "ai",
    "simulation",
    "arduino",
    "esp32",
    "webserial"
  ],
  "author": "Your Organization",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/your-org/embedded-platform/issues"
  },
  "homepage": "https://github.com/your-org/embedded-platform#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2",
    "openai": "^4.0.0",
    "aws-sdk": "^2.1440.0",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "stripe": "^14.17.0",
    "redis": "^4.6.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.0.1",
    "eslint": "^8.48.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}