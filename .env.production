# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Configuration
NODE_ENV=production
PORT=3001
CLIENT_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://username:password@your-mongodb-host:27017/ai-embedded-platform?ssl=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb://localhost:27017/ai-embedded-platform-test

# Authentication
JWT_SECRET=your-super-secure-production-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# OpenAI Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_ORGANIZATION=your-org-id

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-production-bucket-name

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-production-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# AI Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# WebSocket Configuration
WS_PORT=3002
WS_CORS_ORIGIN=https://yourdomain.com

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_SENTRY=true

# MongoDB Production
MONGO_ROOT_USERNAME=your-mongo-root-username
MONGO_ROOT_PASSWORD=your-mongo-root-password

# Grafana
GRAFANA_PASSWORD=your-secure-grafana-admin-password

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Feature Flags
ENABLE_COLLABORATION=true
ENABLE_AI_ASSISTANT=true
ENABLE_HARDWARE_INTEGRATION=true
ENABLE_REAL_TIME_SIMULATION=true

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
ENABLE_ANALYTICS=true

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
ENABLE_CDN=true

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Alerting
ALERT_EMAIL=alerts@yourdomain.com
ENABLE_ALERTS=true

# Rate Limiting
API_RATE_LIMIT=1000
AUTH_RATE_LIMIT=10

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000